<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".text-1"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".text-2"), root_path %></li>
        <li><%= link_to t(".text-3"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users_header"), "users_path" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile_hearder"), current_user %></li>
              <li><%= link_to t(".settings_header"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out_hearder"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".text-4"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
